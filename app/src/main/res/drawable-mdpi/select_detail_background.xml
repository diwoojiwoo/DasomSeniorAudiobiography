<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 전체 배경 및 테두리 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>  <!-- 배경색 -->
            <corners
                android:bottomLeftRadius="24dp"
                android:bottomRightRadius="24dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />  <!-- 모서리 둥글기 -->
            <stroke android:width="1dp" android:color="#cecece"/>  <!-- 전체 테두리 -->
        </shape>
    </item>

    <!-- 맨 아래 선 가리기 (배경 색상으로 덮어줌)-->
    <item android:top="0dp" android:start="1dp"  android:end="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>  <!-- 배경과 동일한 색상으로 아래쪽 덮기 -->
            <corners
                android:bottomLeftRadius="24dp"
                android:bottomRightRadius="24dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />   <!-- 모서리 둥글기 -->
            <size android:height="1dp"/>  <!-- 기존 stroke 두께와 동일하게 설정 -->
        </shape>
    </item>

</layer-list>
