<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/item_recyclerview_background"
    android:padding="30dp">

    <!-- 왼쪽 이미지 -->
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/circular_background"
        android:fontFamily="@font/notosans_kr_b"
        android:lineSpacingExtra="19sp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:textStyle="normal"
        android:gravity ="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 중앙 텍스트 -->
    <TextView
        android:id="@+id/tv_question"
        android:layout_width="630dp"
        android:layout_height="wrap_content"
        android:text="성함 뜻과 본적을 말씀해주세요."
        android:textColor="#333333"
        android:textSize="40sp"
        android:fontFamily="@font/notosans_kr_r"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_answer_yn"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@id/tv_number"
        app:layout_constraintTop_toTopOf="parent"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="40sp"
        android:autoSizeMinTextSize="16sp"
        android:autoSizeStepGranularity="2sp"
        tools:targetApi="o" />

    <!-- 오른쪽 이미지 -->
    <TextView
        android:id="@+id/tv_answer_yn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity ="center"
        android:textColor="@android:color/white"
        android:fontFamily="@font/notosans_kr_r"
        android:textSize="32sp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
