<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141940">

    <FrameLayout
        android:id="@+id/fl_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="48dp"
            android:src="@drawable/edit" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/notosans_kr_medium"
            android:lineSpacingExtra="23sp"
            android:text="답변 수정이 완료되었습니다."
            android:textColor="#ffffff"
            android:textSize="48sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/btn_check_answer"
            android:layout_width="368dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="44dp"
            android:layout_marginStart="120dp"
            android:background="@drawable/rounded_orange_background"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center"
            android:text="답변 확인하기"
            android:lineSpacingExtra="8sp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_go_home"
            android:layout_width="368dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="44dp"
            android:layout_marginEnd="120dp"
            android:background="@drawable/rounded_white_background"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center"
            android:text="메인화면으로"
            android:lineSpacingExtra="8sp"
            android:textAlignment="center"
            android:textColor="#f66e35"
            android:textSize="45sp"
            android:textStyle="bold" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>