<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_title"
        android:layout_width="480dp"
        android:layout_height="88dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_hint_tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="50dp"
            android:background="@drawable/icon_hint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:text="힌트"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:textStyle="bold" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_hint"
        android:layout_width="480dp"
        android:layout_height="312dp"
        android:background="@drawable/bg_hint_tv_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_title">

        <ImageView
            android:id="@+id/iv_hint"
            android:layout_width="432dp"
            android:layout_height="142dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:background="@color/transparent" />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="432dp"
            android:layout_height="142dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="8sp"
            android:maxLines="2"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarFadeDuration="0"
            android:scrollbars="vertical"
            android:textColor="#333333"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="432dp"
            android:layout_height="108dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/bg_hint_btn_confirm"
            android:gravity="center"
            android:lineSpacingExtra="7sp"
            android:text="확인"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="40sp"
            android:textStyle="bold" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>